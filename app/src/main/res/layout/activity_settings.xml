<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="soumyadeb.raven.ui.SettingsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/back_settings"
        android:src="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:alpha="0.2"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_circle_profile_img"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"
        android:id="@+id/img_profile"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:textColor="@android:color/white"
        android:layout_below="@+id/img_profile"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:id="@+id/text_display_name" />

    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_display_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:text="Hi there! I'm using Slime." />

    <Button
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:text="Change Image"
        android:id="@+id/setting_change_image"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_below="@+id/text_status"
        android:padding="18dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp" />
    <Button
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:text="Change Status"
        android:backgroundTint="@android:color/white"
        android:textColor="@color/colorPrimary"
        android:padding="18dp"
        android:id="@+id/setting_change_status"
        android:layout_below="@+id/setting_change_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <include layout="@layout/app_bar_transparent"
        android:id="@+id/toolbar"/>

</RelativeLayout>
